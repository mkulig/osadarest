{
  "$ref": "#/definitions/apartments",
  "definitions": {
    "apartments": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "maxLength": 220
        },
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "order": {
          "type": "number",
          "default": 0
        },
        "color": {
          "type": "string"
        },
        "capacity": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "areaM2": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "beds": {
          "type": "string"
        },
        "priceFrom": {
          "type": "number"
        },
        "currency": {
          "type": "string",
          "default": "PLN"
        },
        "amenities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "icon": {
                "type": "string"
              },
              "label": {
                "type": "string"
              }
            },
            "required": [
              "label"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "cover": {
          "type": "string"
        },
        "coverAlt": {
          "type": "string"
        },
        "gallery": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "src": {
                "type": "string"
              },
              "alt": {
                "type": "string"
              }
            },
            "required": [
              "src"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "seoTitle": {
          "type": "string"
        },
        "seoDescription": {
          "type": "string"
        },
        "canonical": {
          "type": "string",
          "format": "uri"
        },
        "related": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "collection": {
                    "type": "string"
                  }
                },
                "required": [
                  "id",
                  "collection"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "slug": {
                    "type": "string"
                  },
                  "collection": {
                    "type": "string"
                  }
                },
                "required": [
                  "slug",
                  "collection"
                ],
                "additionalProperties": false
              }
            ]
          }
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "slug",
        "color",
        "capacity",
        "areaM2",
        "cover",
        "coverAlt"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}