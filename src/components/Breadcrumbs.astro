---
import { Breadcrumbs as BreadcrumbsComponent } from "astro-breadcrumbs";
import "astro-breadcrumbs/breadcrumbs.css";
---
<nav class=" text-gray-600 container mx-auto px-4 py-8" aria-label="Breadcrumb">
    <BreadcrumbsComponent
        linkTextFormat="sentence"
        separatorAriaHidden={true}
        truncated={true}
        customizeLinks={[{ index: "last", "aria-disabled": true }]}
    >
        <svg slot="index" aria-hidden="true" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/>
        </svg>
        <svg slot="separator" aria-hidden="true" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"/>
        </svg>
    </BreadcrumbsComponent>
</nav>
