---
import { Breadcrumbs as BreadcrumbsComponent } from "astro-breadcrumbs";
import "astro-breadcrumbs/breadcrumbs.css";
---

<div class="py-2 text-gray-600">
<BreadcrumbsComponent linkTextFormat="sentence" separatorAriaHidden={false} truncated={true}
		customizeLinks={[{ index: "last", "aria-disabled": true }]}
		>
		<svg slot="index" aria-label="Home Page" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
<svg
  slot="separator"
  xmlns="http://www.w3.org/2000/svg"
  width="24"
  height="24"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  ><polyline points="9 18 15 12 9 6"></polyline>
</svg>
		</BreadcrumbsComponent>
</div>
