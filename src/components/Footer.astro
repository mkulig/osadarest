---
import { Image } from "astro:assets";
import Logo from "./../assets/logo_crop.png";
import { SITE_TITLE } from "../consts";

const today = new Date();
---

<footer class="container mx-auto p-4 md:py-8">
    <div class="sm:flex sm:items-center sm:justify-between">
        <a href="/">
            <Image src={Logo} alt={SITE_TITLE} class="w-14"/>
        </a>
        <ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
            <li>
                <a href="/blog" class="hover:underline me-4 md:me-6">Blog</a>
            </li>
        </ul>
    </div>
    <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
    <span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400">&copy; {today.getFullYear()} {SITE_TITLE}. Wszelkie prawa zastrze≈ºone.</span>
</footer>
